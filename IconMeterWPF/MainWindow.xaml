<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IconMeterWPF"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:tb="http://www.hardcodet.net/taskbar" 
        xmlns:xcad="http://schemas.xceed.com/wpf/xaml/avalondock" x:Class="IconMeterWPF.MainWindow" 
        mc:Ignorable="d"
        Title="Icon Meter" Height="320" Width="270" MinWidth="250" MinHeight="320" WindowStartupLocation="CenterScreen" Icon="icon.ico" Closing="Window_Closing">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>
    <Window.Resources>
        <local:BoolToVisibility x:Key="BoolToVisibility"/>
        <ContextMenu x:Key="SharedContextMenu" x:Shared="true">
            <MenuItem x:Name="MenuItemSettings" Header="Settings" Click="MenuItemSettings_Click">
                <MenuItem.Icon>
                    <Image Source="images\cog.png"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem x:Name="MenuItemAbout" Header="About Icon Meter" Click="MenuItemAbout_Click">
                <MenuItem.Icon>
                    <Image Source="images\information.png"/>
                </MenuItem.Icon>
            </MenuItem>

            <Separator />

            <MenuItem x:Name="MenuItemClose" Header="Close" Click="MenuItemClose_Click">
                <MenuItem.Icon>
                    <Image Source="images\cross.png"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>

    </Window.Resources>
    <Grid Margin="10,5">
        <Grid.Resources>
            <Style x:Key="lineStyle" TargetType="{x:Type Line}">
                <Setter Property="Stroke" Value="Gray" />
                <Setter Property="Stretch" Value="Fill" />
                <Setter Property="Panel.ZIndex" Value="100" />
                <!-- <Setter Property="StrokeDashArray" Value="1,2" /> -->
            </Style>
            <Style x:Key="horizontalLineStyle" TargetType="{x:Type Line}" BasedOn="{StaticResource lineStyle}">
                <Setter Property="X2" Value="1" />
                <Setter Property="VerticalAlignment" Value="Bottom" />
                <Setter Property="Grid.ColumnSpan" 
                    Value="{Binding ColumnDefinitions.Count, RelativeSource={RelativeSource AncestorType={x:Type Grid}}}"/>
            </Style>
            <Style x:Key="verticalLineStyle" TargetType="{x:Type Line}" BasedOn="{StaticResource lineStyle}">
                <Setter Property="Y2" Value="1" />
                <Setter Property="HorizontalAlignment" Value="Right" />
                <Setter Property="Grid.RowSpan"   
                    Value="{Binding RowDefinitions.Count, RelativeSource={RelativeSource AncestorType={x:Type Grid}}}"/>
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
            <RowDefinition/>
            <RowDefinition Height="10"/>
            <RowDefinition/>
            <RowDefinition Height="10"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="10"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <CheckBox Content="CPU" VerticalAlignment="Center" IsChecked="{Binding Settings.ShowCpuUsage}"/>
        <CheckBox Content="Memory" VerticalAlignment="Center" Grid.Row="1" IsChecked="{Binding Settings.ShowMemoryUsage}"/>
        <CheckBox Content="Disk" VerticalAlignment="Center" Grid.Row="2" IsChecked="{Binding Settings.ShowDiskUsage}"/>
        <CheckBox Content="Network" VerticalAlignment="Center" Grid.Row="4" IsChecked="{Binding Settings.ShowNetworkUsage}"/>
        <xctk:ColorPicker x:Name="ButtonColorCPU" Grid.Column="2" Margin="4" SelectedColor="{Binding Settings.CpuColor}"/>
        <xctk:ColorPicker x:Name="ButtonColorMemory" Grid.Column="2" Margin="4" Grid.Row="1" SelectedColor="{Binding Settings.MemoryColor}"/>
        <xctk:ColorPicker x:Name="ButtonColorDisk" Grid.Column="2" Margin="4" Grid.Row="2" SelectedColor="{Binding Settings.DiskColor}"/>
        <Label Content="Receive:" Grid.Column="1" Grid.Row="3" VerticalContentAlignment="Bottom" Margin="0,0,0,-6"/>
        <Label Content="Send:" Grid.Column="2" Grid.Row="3" VerticalContentAlignment="Bottom" Margin="0,0,0,-6"/>
        <xctk:ColorPicker x:Name="ButtonColorSend" Grid.Column="2" Margin="4" Grid.Row="4" SelectedColor="{Binding Settings.NetworkSendColor}"/>
        <xctk:ColorPicker x:Name="ButtonColorReceive" Grid.Column="1" Margin="4" Grid.Row="4" SelectedColor="{Binding Settings.NetworkReceiveColor}"/>
        <xctk:ColorPicker x:Name="ButtonColorLogicalProcessor" Grid.Column="2" Margin="4" Grid.Row="6" SelectedColor="{Binding Settings.LogicalProcessorColor}"/>
        <Line Grid.Row="5" Style="{StaticResource horizontalLineStyle}" VerticalAlignment="Center"/>
        <CheckBox Content="Logical Processors" VerticalAlignment="Center" Grid.Row="6" Grid.ColumnSpan="2" IsChecked="{Binding Settings.ShowLogicalProcessorsUsage}"/>
        <Line Grid.Row="7" Style="{StaticResource horizontalLineStyle}" VerticalAlignment="Center"/>
        <CheckBox Content="Run at Startup" VerticalAlignment="Center" Grid.Row="9" Grid.ColumnSpan="2" IsChecked="{Binding Settings.RunAtStartup}"/>
        <CheckBox Content="Use Vertical Bar" VerticalAlignment="Center" Grid.Row="8" Grid.ColumnSpan="2" IsChecked="{Binding Settings.UseVerticalBars}"/>
        <Line Grid.Row="10" Style="{StaticResource horizontalLineStyle}" VerticalAlignment="Center"/>
        <Button x:Name="ButtonOK" Content="OK" Grid.Column="1" Margin="4" Grid.Row="11" Command="{Binding SaveAndReset, Mode=OneWay}" Click="ButtonOK_Click"/>
        <Button x:Name="ButtonCancel" Content="Cancel" Grid.Column="2" Margin="4" Grid.Row="11" Click="ButtonCancel_Click" Command="{Binding CancelUpdateSettings, Mode=OneWay}"/>
        <tb:TaskbarIcon x:Name="MainTaskbarIcon" ToolTipText="{Binding Meter.MainTooltip}" DoubleClickCommand="{Binding StartTaskManager, Mode=OneWay}"  ContextMenu="{DynamicResource SharedContextMenu}"/>
        <tb:TaskbarIcon x:Name="LogicalProcessorsTaskbarIcon" ToolTipText="{Binding Meter.LogicalProcessorsTooltip}" DoubleClickCommand="{Binding StartTaskManager, Mode=OneWay}"  ContextMenu="{DynamicResource SharedContextMenu}" Visibility="{Binding ShowLogicalProcessorsUsage, Converter={StaticResource BoolToVisibility}, Mode=OneWay}"/>


    </Grid>
</Window>
